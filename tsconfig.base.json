{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "isolatedModules": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "es2018.regexp", "esnext.bigint", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@mxxrr/style": ["libs/style/src/index.ts"],
      "@mxxrr/data": ["libs/data/src/index.ts"],
      "@mxxrr/prompts": ["libs/prompts/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
